<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/publish_frame"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" android:layout_below="@+id/frameLayout1">

        <fragment
            android:id="@+id/awaiting_results_publish_exam_list_fragment_id"
            android:name="com.pearl.fragment.AwaitingResultsPublishFragment"
            android:layout_width="130dp"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true" />

        <fragment
            android:id="@+id/awaiting_results_publish_students_list_fragment_id"
            android:name="com.pearl.fragment.AwaitingResultsPublishStudentsList"
            android:layout_width="130dp"
            android:layout_height="159dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true" />

        <fragment
            android:id="@+id/awaiting_results_publish_answersheet"
            android:name="com.pearl.fragment.AwaitngResultsPublishAnswerSheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/awaiting_results_publish_students_list_fragment_id"
            android:layout_toRightOf="@+id/awaiting_results_publish_exam_list_fragment_id" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#defafc" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:text="Awaiting Results Publish"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000000"
            android:textSize="15sp"
            android:typeface="sans" />
        
        
        <Button
            android:id="@+id/examMenu"
            android:layout_width="25dp"
            android:layout_height="30dp"
            android:layout_marginLeft="450dp"
            android:background="@drawable/menu_btn" />

        <ImageView
            android:id="@+id/teacher_approval_help"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_marginLeft="400dp"
            android:layout_marginTop="23dp"
            android:src="@drawable/help" />
        
    </FrameLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginLeft="28dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/la_salle_logo" />

</RelativeLayout>