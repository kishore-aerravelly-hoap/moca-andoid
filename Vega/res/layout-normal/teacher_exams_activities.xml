<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/teacher_exam"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/teacher_rejected_test"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignLeft="@+id/teacher_awaiting_evaluation"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rejected_test" >

        <TextView
            android:id="@+id/rejected_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:paddingTop="5dp"
            android:text="@string/te_rejectedTests"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/translucent_dark"
            android:textStyle="bold"
            android:typeface="sans" 
            android:textSize="10dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/results_published_tests"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignLeft="@+id/teacher_awaiting_approval"
        android:layout_alignParentBottom="true"
        android:background="@drawable/results_publish_test" >

        <TextView
            android:id="@+id/results_published_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:paddingTop="5dp"
            android:text="@string/te_resultsPublishedTests"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/translucent_dark"
            android:textStyle="bold"
            android:typeface="sans" 
            android:textSize="9dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/awaitng_results_publish"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignLeft="@+id/teacher_my_approval"
        android:layout_alignParentBottom="true"
        android:background="@drawable/awaiting_results_publish" >

        <TextView
            android:id="@+id/awaiting_results"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
			android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:text="@string/te_awaitingResultsPublish"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/translucent_dark"
            android:textStyle="bold"
            android:typeface="sans" 
            android:textSize="9dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/publish_test"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:background="@drawable/publish" >

        <TextView
            android:id="@+id/publish_test_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:paddingTop="5dp"
            android:text="@string/te_testsPublish"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/translucent_dark"
            android:textStyle="bold"
            android:typeface="sans"
            android:textSize="10dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/create_test"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignLeft="@+id/publish_test"
        android:layout_alignTop="@+id/teacher_my_approval"
        android:background="@drawable/create_test" >

        <TextView
            android:id="@+id/create_test_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:paddingTop="5dp"
            android:text="@string/te_createTest"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/translucent_dark"
            android:textStyle="bold"
            android:typeface="sans" 
            android:textSize="10dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/teacher_my_approval"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignTop="@+id/teacher_awaiting_approval"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/teacher_awaiting_approval"
        android:background="@drawable/my_approval" >

        <TextView
            android:id="@+id/my_approval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:paddingTop="5dp"
            android:paddingLeft="15dp"
            android:text="@string/teacher_my_approval"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/translucent_dark"
            android:textStyle="bold"
            android:typeface="sans" 
            android:textSize="10dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/teacher_awaiting_evaluation"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_above="@+id/teacher_rejected_test"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/awaiting_evaluation" >

        <TextView
            android:id="@+id/awaiting_evaluation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:paddingTop="5dp"
            android:text="@string/te_awaitingEvaluation"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/translucent_dark"
            android:textStyle="bold"
            android:typeface="sans"
            android:textSize="10dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/teacher_awaiting_approval"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignTop="@+id/teacher_awaiting_evaluation"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@+id/teacher_awaiting_evaluation"
        android:background="@drawable/awaiting_approval" >

        <TextView
            android:id="@+id/awaiting_approval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:paddingTop="5dp"
            android:text="@string/te_awaitingApprovals"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/translucent_dark"
            android:textStyle="bold"
            android:typeface="sans" 
            android:textSize="10sp"/>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <ImageView
            android:id="@+id/teacher_menu_button"
            android:layout_width="60dp"
            android:layout_height="27dp"
            android:layout_marginLeft="455dp"
            android:src="@drawable/menu_btn" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginLeft="28dp"
            android:src="@drawable/la_salle_logo" />

        <TextView
            android:id="@+id/quizzard_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="5dp"
            android:textColor="#ffffff"
            android:text="@string/quizzard"
            android:textSize="15sp" />

    </FrameLayout>

</RelativeLayout>