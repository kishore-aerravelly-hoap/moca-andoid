<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="70dp"
    android:background="@android:color/transparent"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/under_construction_test_name"
        android:layout_width="70dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:textSize="10dip"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/underconstruction_test_schedule"
        android:layout_width="100dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_height="wrap_content"
        android:textSize="10dip"
        android:layout_marginLeft="35dp"
        android:gravity="center_vertical|center_horizontal"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000" />

    <Button
        android:id="@+id/underconstruction_edit_test"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="4dp"
        android:textSize="10dip"
        android:background="@drawable/underconstruction_btn"
        android:text="@string/underconstruction_edit_test"
        android:textColor="#000000" />

    <Button
        android:id="@+id/underconstruction_delete_test"
        android:layout_width="60dp"
        android:layout_height="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2dp"
        android:textSize="10dip"
        android:layout_marginBottom="4dp"
        android:background="@drawable/underconstruction_btn"
        android:text="@string/underconstruction_delete_test_name"
        android:textColor="#000000" />

</LinearLayout>