<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/FrameLayout1"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="#262626" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginLeft="28dp"
            android:src="@drawable/la_salle_logo" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="170dp"
            android:text="@string/Analytics_list"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:typeface="sans" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:layout_alignTop="@+id/relativeLayout3"
        android:layout_toRightOf="@+id/relativeLayout3"
        android:visibility="visible" >
        <RelativeLayout 
            android:id="@+id/analytics"
            android:layout_width="350dp"
            android:layout_height="250dp"
            android:padding="20dp" 
            android:layout_marginTop="10dp">
            
            <TextView
            android:id="@+id/chart4_empty_analytics"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="No Data Available"
            android:textColor="#ffffff"
            android:textSize="12sp" /> </RelativeLayout>
        
         
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="120dp"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/FrameLayout1"
        android:layout_margin="20dp"
        android:background="@drawable/spinner_back"
        android:orientation="vertical"
        android:visibility="visible" >

        <Button
            android:id="@+id/chart4_get_chart"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/analytics_button_shape"
            android:text="Get Chart"
            android:textSize="10dp"
            android:textColor="#000000" />

        <RelativeLayout
            android:id="@+id/chart4_spinners_layout"
            android:layout_width="120dp"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical" >

            <Spinner
                android:id="@+id/chart4_exam_category"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true" />

            <Spinner
                android:id="@+id/chart4_grade"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/chart4_exam_category" />

            <Spinner
                android:id="@+id/chart4_section"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/chart4_grade" />

            <Spinner
                android:id="@+id/chart4_student_name"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/chart4_section" />

        </RelativeLayout>
    </RelativeLayout>

     <TextView
         android:id="@+id/abbrevations"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/relativeLayout3"
         android:layout_marginBottom="31dp"
         android:layout_toRightOf="@+id/relativeLayout3"
         android:text=""
         android:textColor="#ffffff"
         android:textSize="16sp" />

     <TextView
         android:id="@+id/chart_name_4"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
         android:layout_below="@+id/FrameLayout1"
         android:layout_marginRight="50dp"
         android:gravity="center_vertical|center_vertical"
         android:text="PerformanceComparisionOfSectionsChartActivity"
         android:textColor="#ffffff"
         android:textSize="14sp" />

</RelativeLayout>