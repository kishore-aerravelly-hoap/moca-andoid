<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <CheckBox
        android:id="@+id/publish_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="79dp"
        android:background="@drawable/tc_checkbox" />

    <TextView
        android:id="@+id/publish_exams_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/publish_check"
        android:layout_alignBottom="@+id/publish_check"
        android:layout_marginLeft="206dp"
        android:layout_toRightOf="@+id/publish_check"
        android:text="Exam Name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/translucent_dark" />

</RelativeLayout>