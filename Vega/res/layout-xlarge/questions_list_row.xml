<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <TextView android:id="@+id/current_question"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:textColor="#000000"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:visibility="invisible"
 
        android:text=">"/>

    <ImageView
        android:id="@+id/seen"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/answered"
        android:padding="5dp"
        android:src="@drawable/ceye" />

    <TextView
        android:id="@+id/questionType"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="27dp"
        android:layout_toLeftOf="@+id/seen"
        android:padding="5dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical|center_horizontal"
        android:paddingLeft="20dp"
        android:text="Question type"
        android:textColor="#000000"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/answered"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="22dp"
        android:layout_toLeftOf="@+id/quesListBookmark"
        android:padding="5dp"
        android:src="@drawable/not_answered" />

    <ImageView
        android:id="@+id/quesListBookmark"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="28dp"
        android:layout_toLeftOf="@+id/marksAlloted"
        android:padding="5dp"
        android:src="@drawable/ques_unbookmarked" />

    <TextView
        android:id="@+id/marksAlloted"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="28dp"
        android:padding="5dp"
        android:paddingLeft="20dp"
        android:text="46M"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/ques"
        android:layout_width="800dp"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:padding="5dp"
        android:layout_toRightOf="@+id/list_question_no"
        android:layout_toLeftOf="@+id/questionType"
        android:text="Question"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/list_question_no"
        android:layout_width="50dp"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/current_question"
        android:padding="5dp"
        android:text="100:"
        android:textColor="#000000"
        android:textSize="20sp" />

</RelativeLayout>