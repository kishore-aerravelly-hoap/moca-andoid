<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400dp"
    android:layout_height="300dp"
    android:layout_gravity="center"
    android:background="#aadd6d"
    android:orientation="vertical"
    android:weightSum="1" >

    <TextView
        android:id="@+id/configAlert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:paddingTop="10dp"
        android:text="@string/ConfigChanges"
        android:textColor="#c40b0b"
        android:textSize="16sp"
        android:visibility="invisible" />

    <Button
        android:id="@+id/saveConfiguration"
        android:layout_width="96dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:text="Save" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/saveConfiguration"
        android:layout_alignRight="@+id/saveConfiguration"
        android:layout_marginBottom="49dp"
        android:text="ALert Display Time (Secs)"
        android:textColor="#000000"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/toastTime"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignBaseline="@+id/textView1"
        android:layout_alignBottom="@+id/textView1"
        android:layout_alignRight="@+id/configAlert"
        android:inputType="numberSigned"
        android:singleLine="true" >

        <requestFocus />
    </EditText>

</RelativeLayout>