<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/fetch_button_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:onClick="fetchOnClick"
        android:text="@string/fetch_questions" />

    <Spinner
        android:id="@+id/grade_spinner_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" />

    <Spinner
        android:id="@+id/question_type_spinner_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/grade_spinner_data"
        android:layout_marginTop="116dp" />

    <Spinner
        android:id="@+id/subject_spinner_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/question_type_spinner_data"
        android:layout_marginTop="160dp" />

</RelativeLayout>