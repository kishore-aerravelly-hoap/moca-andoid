<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="400px"
    android:layout_height="fill_parent"
    android:layout_marginTop="40px"
    android:orientation="vertical" >

    <SearchView
        android:id="@+id/pageSearch"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/search_border"
        android:gravity="top"
        android:iconifiedByDefault="false"
        android:padding="5px" >
    </SearchView>

    <ListView
        android:id="@+id/pageSearchResults"
        android:layout_width="wrap_content"
        android:layout_height="547dp"
        android:layout_below="@+id/pageSearch"
        android:background="@drawable/search_results_border"
        android:clickable="true"
        android:footerDividersEnabled="false"
        android:padding="2dp"
        android:textFilterEnabled="true" >

        <!-- Preview: listitem=@layout/searchresults_list_row -->
    </ListView>

    <LinearLayout
        android:id="@+id/searchOptions"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#FFFFFF"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:padding="1dip" >

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Search Google" >
        </Button>

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Dictionary" >
        </Button>
    </LinearLayout>

</LinearLayout>