<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@android:color/transparent" >

    <TextView
        android:id="@+id/bookmarkDescId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:text="Description"
        android:textColor="#000000"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/bookmarkDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="false"
        android:paddingLeft="20dp"
        android:paddingTop="25dp"
        android:text="Date"
        android:textColor="#000000"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/bookmarkListIcon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/bookmarked" />

    <TextView
        android:id="@+id/bookmarkPageNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/bookmarkListIcon"
        android:text="Page NO"
        android:textColor="#94734f"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/bookmarksAlert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bookmarkDate"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:text="No bookmarks crearted for this book"
        android:textColor="#000000"
        android:textSize="18sp"
        android:visibility="gone" >
    </TextView>

</RelativeLayout>