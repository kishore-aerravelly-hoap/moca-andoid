<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/evaluation_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbg"
    android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="730dp"
            android:layout_height="40dp"
            android:background="@drawable/students_detail_header"
            android:visibility="gone">

            <TextView
                android:id="@+id/student_name"
                android:layout_width="730dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="300dp"
                android:gravity="center_vertical"
                android:text="Student Name"
                android:textColor="#000000"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/exam_details_layout"
            android:layout_width="1325dp"
            android:layout_height="1000dp"
            android:visibility="visible" >

            <LinearLayout
                android:id="@+id/questions_eval"
                android:layout_width="740dp"
                android:layout_height="650dp"
                android:layout_below="@+id/linearLayout1"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal" >

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="120dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="20dp"
                android:layout_toLeftOf="@+id/linearLayout4"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/marks_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Total Marks"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/exam_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exam Date"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/date_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Test"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/text_view"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignBottom="@+id/linearLayout1"
                android:layout_alignLeft="@+id/questions_eval"
                android:layout_alignTop="@+id/linearLayout1"
                android:layout_marginLeft="30dp"
                android:orientation="vertical"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/grade_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grade "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/section_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Section"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/subject_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="subject"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="15dp"
                android:layout_height="90dp"
                android:layout_alignTop="@+id/text_view"
                android:layout_toRightOf="@+id/text_view"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/grade_label_colon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/section_label_colon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/subject_label_colon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:layout_marginRight="30dp"
                android:layout_alignBottom="@+id/text_view"
                android:layout_alignTop="@+id/linearLayout3"
                android:layout_toRightOf="@+id/linearLayout3"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/grade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/section"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/subject_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="170dp"
                android:layout_height="110dp"
                android:layout_alignRight="@+id/questions_eval"
                android:layout_alignTop="@+id/linearLayout1"
                android:layout_marginRight="96dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/max_marks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/test_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="100"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/exam_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="27dp"
                    android:text="100"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="15dp"
                android:layout_height="90dp"
                android:layout_alignTop="@+id/linearLayout5"
                android:layout_toLeftOf="@+id/linearLayout5"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/date_label_colon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/marks_label_colon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/exam_label_colon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=":"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/frame2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:layout_marginTop="410dp"
            android:text="Please select a student to get test paper"
            android:textColor="#000000"
            android:textSize="28sp" />

    <RelativeLayout
        android:id="@+id/ll"
        android:layout_width="280dp"
        android:layout_height="800dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/students_right_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/text_manual"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="17dp"
            android:layout_marginTop="20dp"
            android:text="Manual"
            android:textColor="#ffffff"
            android:textSize="23sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/manual_correct_answer_count_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/text_manual"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="52dp"
            android:text="@string/correct_answer_count"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/manual_wrong_answer_count_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/manual_correct_answer_count_text"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="24dp"
            android:text="@string/wrong_answer_count"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/grand_total_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/manual_wrong_answer_count_text"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="27dp"
            android:text="@string/grand_total"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/manual_correct_answer_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/manual_wrong_answer_count_text"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"
            android:text="0"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/grand_total_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/grand_total_text"
            android:layout_alignBottom="@+id/grand_total_text"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"
            android:text="0"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/manual_wrong_answer_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/manual_wrong_answer_count_text"
            android:layout_alignBottom="@+id/manual_wrong_answer_count_text"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"
            android:text="0"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/manual_correct_answer_marks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dip"
            android:layout_marginTop="67dp"
            android:text="0"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/automated_ques_count_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/text_automated"
            android:layout_marginLeft="2dip"
            android:layout_marginTop="30dp"
            android:text="Total Questions :"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/aotomated_corect_count_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/automated_ques_count_text"
            android:layout_marginLeft="2dip"
            android:layout_marginTop="21dp"
            android:text="@string/correct_answer_count"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/automated_ques_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/automated_ques_count_text"
            android:layout_alignBottom="@+id/automated_ques_count_text"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"
            android:text="0"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/automated_corect_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/aotomated_corect_count_text"
            android:layout_alignBottom="@+id/aotomated_corect_count_text"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"
            android:text="0"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/automated_wrong_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/automated_wrong_count_text"
            android:layout_alignBottom="@+id/automated_wrong_count_text"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"
            android:text="0"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/automated_total_marks_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/automated_wrong_count_text"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="25dp"
            android:text="@string/automated_total_marks"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/automated_total_marks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/automated_total_marks_text"
            android:layout_alignBottom="@+id/automated_total_marks_text"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"
            android:text="0"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/automated_wrong_count_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/automated_total_marks_text"
            android:layout_below="@+id/aotomated_corect_count_text"
            android:layout_marginTop="26dp"
            android:text="@string/wrong_answer_count"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/manual_correct_answer_count_text"
            android:layout_marginTop="10dp"
            android:background="@drawable/students_right_divider" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/manual_correct_answer_marks"
            android:layout_marginTop="10dp"
            android:background="@drawable/students_right_divider" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/manual_wrong_answer_count_text"
            android:layout_marginTop="10dp"
            android:background="@drawable/students_right_divider" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/grand_total_text"
            android:layout_marginTop="10dp"
            android:background="@drawable/students_right_divider" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/automated_ques_count_text"
            android:layout_marginTop="10dp"
            android:background="@drawable/students_right_divider" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/automated_total_marks_text"
            android:layout_marginTop="10dp"
            android:background="@drawable/students_right_divider" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/automated_wrong_count_text"
            android:layout_marginTop="10dp"
            android:background="@drawable/students_right_divider" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/aotomated_corect_count_text"
            android:layout_marginTop="10dp"
            android:background="@drawable/students_right_divider" />

        <ImageView
            android:id="@+id/submitEvaluatedPaper"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="33dp"
            android:background="@drawable/students_submitbutton" />

        <TextView
            android:id="@+id/text_automated"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Automated"
            android:textColor="#ffffff"
            android:textSize="23sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/manual_correct_answer_marks_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_manual"
            android:layout_marginLeft="2dp"
            android:text="@string/correct_answer_marks"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </RelativeLayout>

</RelativeLayout>