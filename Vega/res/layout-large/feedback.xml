<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/feedback_bg"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/feedback_topbar"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/feedback_name"
        android:textSize="21sp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="900dp"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="@drawable/feedback_innerbg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/click_howto"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="55dp"
            android:paddingTop="10dp"
            android:text="@string/feedback"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="500dp"
            android:layout_height="2dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="55dp"
            android:background="@drawable/feedback_topbar" />

        <Spinner
            android:id="@+id/feedbackList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="50dp"
            android:layout_weight="0.00"
            android:drawableRight="@drawable/ereader_bookmark_arrow"
            android:text="Performance"
            android:textColor="@android:color/black" />

        <EditText
            android:id="@+id/feedbackData"
            android:layout_width="714dp"
            android:layout_height="152dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="0.81"
            android:background="#ffffff"
            android:gravity="top"
            android:hint="@string/feedback_hint"
            android:inputType="textMultiLine"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:text=""
            android:textColor="#000000"
            android:textCursorDrawable="@null" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="fill_parent"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/submitFeedback"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="70dp"
            android:background="@drawable/feedback_submit_btn" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="100dp"
        android:layout_height="85dp"
        android:layout_alignLeft="@+id/relativeLayout1"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/la_salle_logo" >
    </ImageView>

    <Button
        android:id="@+id/Feedback_menu_button"
        android:layout_width="35dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="30dp"
        android:background="@drawable/menu_btn" />

</RelativeLayout>