<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/teacher_exam"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/teacher_rejected_test"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rejected_test" >

        <TextView
            android:id="@+id/rejected_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:paddingTop="10dp"
            android:text="@string/te_rejectedTests"
            android:textSize="14sp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/translucent_dark"
            android:textStyle="bold"
            android:typeface="sans" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/results_published_tests"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_alignLeft="@+id/teacher_awaiting_approval"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/results_publish_test" >

        <TextView
            android:id="@+id/results_published_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="@string/te_resultsPublishedTests"
            android:textSize="14sp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/translucent_dark"
            android:textStyle="bold"
            android:typeface="sans" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/awaitng_results_publish"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_alignLeft="@+id/teacher_my_approval"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="5dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/awaiting_results_publish" >

        <TextView
            android:id="@+id/awaiting_results"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="@string/te_awaitingResultsPublish"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/translucent_dark"
            android:textSize="14sp"
            android:textStyle="bold"
            android:typeface="sans" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/publish_test"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/publish" >

        <TextView
            android:id="@+id/publish_test_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:paddingTop="10dp"
            android:text="@string/te_testsPublish"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/translucent_dark"
            android:textSize="14sp"
            android:textStyle="bold"
            android:typeface="sans" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/create_test"
        android:layout_width="200dp"
        android:layout_height="210dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/quiz_main"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/create_test" >

        <TextView
            android:id="@+id/create_test_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:paddingTop="10dp"
            android:text="@string/te_createTest"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="14sp"
            android:textColor="@color/translucent_dark"
            android:textStyle="bold"
            android:typeface="sans" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/teacher_awaiting_evaluation"
        android:layout_width="220dp"
        android:layout_height="210dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/quiz_main"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/awaiting_evaluation" >

        <TextView
            android:id="@+id/awaiting_evaluation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="55dp"
            android:paddingTop="10dp"
            android:text="@string/te_awaitingEvaluation"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/translucent_dark"
            android:textSize="14sp"
            android:textStyle="bold"
            android:typeface="sans" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/teacher_awaiting_approval"
        android:layout_width="220dp"
        android:layout_height="210dp"
        android:layout_below="@+id/quiz_main"
        android:layout_marginRight="15dp"
        android:layout_marginTop="20dp"
        android:layout_toLeftOf="@+id/teacher_awaiting_evaluation"
        android:background="@drawable/awaiting_approval" >

        <TextView
            android:id="@+id/awaiting_approval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_marginTop="55dp"
            android:paddingTop="10dp"
            android:text="@string/te_awaitingApprovals"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/translucent_dark"
            android:textSize="14sp"
            android:textStyle="bold"
            android:typeface="sans" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/quiz_main"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <ImageView
            android:id="@+id/teacher_menu_button"
            android:layout_width="35dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:src="@drawable/menu_btn" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:layout_marginLeft="28dp"
            android:src="@drawable/la_salle_logo" />
        
        <TextView 
            android:id="@+id/quizard_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/quizzard"
            android:textSize="21sp"
            android:textColor="#ffffff"
            android:typeface="sans"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/teacher_my_approval"
        android:layout_width="220dp"
        android:layout_height="210dp"
        android:layout_alignTop="@+id/create_test"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@+id/create_test"
        android:background="@drawable/my_approval" >

        <TextView
            android:id="@+id/my_approval"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="55dp"
            android:paddingTop="10dp"
            android:text="@string/teacher_my_approval"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/translucent_dark"
            android:textSize="14sp"
            android:textStyle="bold"
            android:typeface="sans" />
    </RelativeLayout>

</RelativeLayout>