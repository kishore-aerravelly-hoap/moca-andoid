<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#b87bc2"
    android:orientation="vertical"
    android:weightSum="1" >

    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:background="#81418c" >

        <TextView
            android:id="@+id/exam_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Exam Title"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="21sp"
            android:textColor="#ffffff" />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="100dp"
            android:layout_height="85dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/la_salle_logo" />

        <TextView
            android:id="@+id/timer"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/student_grade"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="2dp"
            android:text="1245789"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15dp"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/marks"
            android:layout_centerHorizontal="true"
            android:padding="5dp"
            android:text="Subject"
            android:textColor="#ffffff"
            android:textSize="15px" />

        <ImageView
            android:id="@+id/backToShelf"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="99dp"
            android:layout_toLeftOf="@+id/student_grade"
            android:src="@drawable/backtoshelf"
            android:visibility="gone" />

        <TextView
            android:id="@+id/marks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="marks"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/student_grade"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_marginTop="2dp"
            android:layout_alignLeft="@+id/student"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/exam_title"
              android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Grade,Section"
            android:textSize="15dp"
            android:textColor="#ffffff" />

        <ImageView
            android:id="@+id/expandableName_answer1"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/imageView1"
            android:src="@drawable/attendance_arrow_down"
            android:visibility="visible" />

        <TextView
            android:id="@+id/student"
            android:layout_width="180dp"
            android:layout_height="30dp"
            android:layout_above="@+id/subject"
            android:layout_alignParentRight="true"
            android:layout_marginRight="28dp"
            android:text="student"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="15dp"
            android:textColor="#ffffff" />

        <ImageView
            android:id="@+id/question_help"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/subject"
            android:layout_marginRight="33dp"
            android:layout_toLeftOf="@+id/student_grade"
            android:src="@drawable/help" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
         >
        
    <LinearLayout
        android:id="@+id/question_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:layout_above="@+id/controls_layout"
        android:background="@drawable/exam_paper_bg"
        android:orientation="vertical"
        android:paddingLeft="40dp"
        android:paddingRight="40dp" >

    </LinearLayout>

    <LinearLayout
        android:id="@+id/controls_layout"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="#81418c" >

        <Button
            android:id="@+id/prev_button"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@+id/save_button"
            android:layout_margin="2dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical|center_horizontal"
            android:text="Previous"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/questionNo"
            android:layout_width="45dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/prev_button"
            android:layout_alignBottom="@+id/prev_button"
            android:layout_margin="5dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/prev_button"
            android:gravity="center_vertical|center_horizontal"
            android:text="15/15"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff"
            android:textSize="13sp" />

        <Button
            android:id="@+id/next_button"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/marked"
            android:layout_margin="5dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/questionNo"
            android:text="Next"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/questionNo"
            android:layout_alignBottom="@+id/questionNo"
            android:layout_margin="2dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/marked"
            android:text="Marks attempted"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffff"
            android:textSize="13sp" />

        <Button
            android:id="@+id/backToQuestionsList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="2dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/quesBookmark"
            android:text="Back to Questions List"
            android:textSize="13sp" />

        <Button
            android:id="@+id/save_button"
            android:layout_width="55dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/submit_button"
            android:layout_margin="2dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/backToQuestionsList"
            android:text="Save"
            android:textSize="15sp" />

        <Button
            android:id="@+id/submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/backToQuestionsList"
            android:layout_margin="3dp"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/save_button"
            android:text="Submit Exam"
            android:textSize="15sp" />

        <CheckBox
            android:id="@+id/marked"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_alignBaseline="@+id/textView9"
            android:layout_alignBottom="@+id/textView9"
            android:layout_margin="5dp"
            android:layout_marginLeft="21dp"
            android:layout_toRightOf="@+id/next_button"
            android:text="Marked"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/quesBookmark"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:layout_toRightOf="@+id/textView9"
            android:src="@drawable/ques_unbookmarked" />

        </LinearLayout>
        </RelativeLayout>

</LinearLayout>